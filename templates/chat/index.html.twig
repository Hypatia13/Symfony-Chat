{% extends 'base.html.twig' %}

{% block title %}Symfony Chat{% endblock %}

{% block stylesheets %}
{{ parent() }}
        {# <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}"> #}
    {% endblock %}
{% block body %}
<section class="jumbotron text-center">
    <div class="container">
        <div class="row">
            <ul id="messages-list" class="col-lg-12 col-md-12 col-sm-12 rounded message-list"></ul>
        </div>
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-9">
                <textarea id="message-area" class="form-control" rows="3" placeholder="Type your message"></textarea>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <input type="button" id="submit-form" value="Send" class="btn btn-lg btn-block btn-outline-primary"/>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
{{ parent() }}
    <script src="{{ asset('js/chat.js') }}"></script>
{% endblock %}

